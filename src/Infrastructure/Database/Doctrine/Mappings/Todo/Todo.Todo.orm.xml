<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Etechnologia\Platform\Todo\Core\Todo\Todo" table="todo">
        <id name="id" column="id" type="string" length="36" />
        <field name="title" column="title" type="string" length="255" />
        <field name="created" column="created" type="datetime_immutable" />
        <field name="updated" column="updated" type="datetime_immutable" nullable="true" />
    </entity>
</doctrine-mapping>